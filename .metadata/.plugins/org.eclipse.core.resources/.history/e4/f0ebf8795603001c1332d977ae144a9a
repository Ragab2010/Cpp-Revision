#include <iostream>
using namespace std;



//void print(int x){
//	cout<<"not template function int &x :"<<x<<endl;
//}

class Human{
private :
	int age;
	string name;
public :
	Human(int age_=0 , string name_ = "none" );
	void printAge();
	void printName();
	void printAll();

};
 inline void Human::printAge(){

	cout<<"age  is :"<<age<<endl;

}
void Human::printName(){
	cout<<"name is :"<<name<<endl;

}
inline void Human::printAll(){
	printAge();
	printName();
}
Human::Human(int age_ , string name_){
	age = age_;
	name=name_;
}

int main() {
	Human ahmed= Human(20 , "Ahmed");//explicit call constructor
	Human ramy(25 , "Aamy");         //implicit call constructor
	Human *pTamer = new Human(29 , "Tamer");
	ahmed.printAll();
	ramy.printAll();
	pTamer->printAll();


	return 0;
}





