#include <iostream>
using namespace std;

class Number{
private :
	int value;
public :
	Number(int value_ =0);
	Number operator+(Number &pt);
	void printValue();
};


Number::Number(int value_){
	value = value_;
}

Number Number::operator+(Number &pt){
	Number copy;
	copy.value= value + pt.value;
	return copy;
}
void Number::printValue(){
	cout<<"the value is:"<<value<<endl;
}


int main(){
	Number a=15  ,b=10;
	Number sum = a+b;
	sum.printValue();


	return 0;
}

