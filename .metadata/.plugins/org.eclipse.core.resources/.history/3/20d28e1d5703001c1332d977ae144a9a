#include <iostream>
using namespace std;



//void print(int x){
//	cout<<"not template function int &x :"<<x<<endl;
//}

class Human{
private :
	int age;
	string name;
public :
	Human();
	void printAge();
	void printName();
	void printAll();

};
 inline void Human::printAge(){

	cout<<"age  is :"<<age<<endl;

}
void Human::printName(){
	cout<<"name is :"<<name<<endl;

}
inline void Human::printAll(){
	printAge();
	printName();
}
Human::Human(){
	age = 0;
	name="none";
	cout<<"def constructor"<<endl;
}

int main() {
	Human ahmed= Human();//explicit call constructor
	Human ramy;         //implicit call constructor
	Human *pTamer = new Human;//pointer point to object Human(29 , "Tamer")
	ahmed.printAll();
	ramy.printAll();
	pTamer->printAll();


	return 0;
}





