#include <iostream>
using namespace std;


class Human{
private :
	int age;
	string name;
public :
	Human();
	~Human();
	void printAge();
	void printName();
	void printAll();

};
 inline void Human::printAge(){

	cout<<"age  is :"<<age<<endl;

}
void Human::printName(){
	cout<<"name is :"<<name<<endl;

}
inline void Human::printAll(){
	printAge();
	printName();
}


Human::Human(){
	cout<<"constructor"<<endl;
	age= 0;
	name="none";
}

Human::~Human(){
	cout<<"Deconstructor"<<endl;

}

int main() {
	Human ahmed= Human();//explicit call constructor
//	Human ramy;         //implicit call constructor
//	Human *pTamer = new Human;//pointer point to object Human(29 , "Tamer")
	ahmed.printAll();
//	ramy.printAll();
//	pTamer->printAll();


	return 0;
}





